<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
  <%= link_to(complete_task_path(@task), data: {turbo_method: :patch}) do %>
    <i class="fa-regular fa-square-check"></i>
  <% end %>
  <p>This task is completed</p>
<% else %>
  <%= link_to(complete_task_path(@task), data: {turbo_method: :patch}) do %>
    <i class="fa-regular fa-square"></i>
  <% end %>
  <p>This task is not completed yet</p>
<% end %>

<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit this task', edit_task_path %>
